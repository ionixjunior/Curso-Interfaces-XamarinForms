<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Exemplos.Capitulo01.ExemploButton"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Button">
    <ContentPage.Content>
        <Button
            BackgroundColor="Orange"
            BorderColor="Black"
            BorderWidth="4"
            Clicked="Button_Clicked"
            ContentLayout="Top,60"
            CornerRadius="30"
            FontAttributes="Bold"
            FontSize="Medium"
            HorizontalOptions="Center"
            ImageSource="banana.png"
            Pressed="Button_Pressed"
            Released="Button_Released"
            Text="Meu primeiro botão"
            TextColor="Black"
            TextTransform="Lowercase"
            VerticalOptions="Center"
            WidthRequest="300" />
    </ContentPage.Content>
</ContentPage>
