<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Exemplos.Capitulo01.ExemploDatePicker"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="DatePicker">
    <ContentPage.Content>
        <DatePicker
            x:Name="MeuDatePicker"
            BackgroundColor="Orange"
            Date="8/30/1987"
            FontAttributes="Bold"
            Format="D"
            HorizontalOptions="Center"
            TextColor="Yellow"
            VerticalOptions="Center" />
    </ContentPage.Content>
</ContentPage>
