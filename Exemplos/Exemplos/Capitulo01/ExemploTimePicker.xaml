<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Exemplos.Capitulo01.ExemploTimePicker"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="TimePicker">
    <ContentPage.Content>
        <TimePicker
            x:Name="MeuTimePicker"
            BackgroundColor="Orange"
            FontAttributes="Bold"
            Format="t"
            HorizontalOptions="Center"
            TextColor="Yellow"
            Time="11:00"
            VerticalOptions="Center" />
    </ContentPage.Content>
</ContentPage>
