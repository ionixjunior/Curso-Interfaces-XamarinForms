<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Exemplos.Capitulo01.ExemploImage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Image">
    <ContentPage.Content>
        <Image
            Aspect="AspectFit"
            BackgroundColor="Orange"
            HeightRequest="300"
            HorizontalOptions="Center"
            IsAnimationPlaying="true"
            Source="https://media.giphy.com/media/dchERAZ73GvOE/giphy.gif"
            VerticalOptions="Center"
            WidthRequest="300" />
    </ContentPage.Content>
</ContentPage>
